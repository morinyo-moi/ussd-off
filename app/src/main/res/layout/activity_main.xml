<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ”’ Background USSD"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:textColor="#2c3e50" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Ready to start USSD"
        android:textSize="16sp"
        android:padding="15dp"
        android:background="#e8f5e8"
        android:textColor="#2e7d32"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/startUssdButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸš€ Start Background USSD"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#2196f3" />

    <!-- Input Container - Initially Hidden -->
    <LinearLayout
        android:id="@+id/inputContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="15dp"
        android:background="#ffffff"
        android:padding="8dp"
        android:elevation="4dp">

        <EditText
            android:id="@+id/userInputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Enter USSD response..."
            android:inputType="number"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/sendInputButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:padding="12dp"
            android:backgroundTint="#4caf50"
            android:textColor="#ffffff" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USSD Responses:"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColor="#666" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/resp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Background USSD service ready\n\nâ€¢ USSD dialogs will be hidden\nâ€¢ All interaction happens here\nâ€¢ User won't see actual USSD screens"
            android:textSize="12sp"
            android:padding="15dp"
            android:background="#ffffff"
            android:textColor="#333"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¡ USSD runs in background - no dialogs visible to user"
        android:textSize="12sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="#fff3e0"
        android:textColor="#e65100"
        android:layout_marginTop="10dp" />

</LinearLayout>